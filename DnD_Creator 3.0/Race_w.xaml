<UserControl x:Class="DnD_Creator_3._0.Race_w"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnD_Creator_3._0"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="100" Background="White">
    <Border BorderBrush="SlateGray" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="Img1\Pic.jpg" Width="70" Margin="5"/>
            <Label Grid.Row="1" Content="Race name" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Grid.Row="2" Content="Описание" FontSize="14" Margin="5" Click="Button_Click"/>
        </Grid>
    </Border>   
</UserControl>
