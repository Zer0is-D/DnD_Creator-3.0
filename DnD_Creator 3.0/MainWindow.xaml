<Window x:Class="DnD_Creator_3._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_Creator_3._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <Label Content="DnD Creator 2.0" FontSize="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="Создать персонажа" FontSize="16" Margin="100,10,100,10" Click="Button_Click"/>
            <Button Grid.Row="1" Content="Все персонажи" FontSize="16" Margin="100,10,100,10" Click="Button_Click_1"/>
            <Button Grid.Row="2" Content="Библиотека заклинаний" FontSize="16" Margin="100,10,100,10" IsEnabled="False"/>
            <Button Grid.Row="3" Content="Выйти" FontSize="16" Margin="120,10,120,10"/>
        </Grid>
    </Grid>
</Window>
